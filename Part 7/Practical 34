import java.util.*;
public class p34
{
    public static void main(String[] args)
    {
        thread1 t1 = new thread1();
        t1.start();
    }
}
class thread1 extends Thread
{
    public void run()
    {
        Random r = new Random();
        while (true)
        {
            int num = r.nextInt(5);
            System.out.println("Generated Number: " + num);

            if (num % 2 == 0)
            {
                thread2 t2 = new thread2();
                t2.method1(num);
                t2.start();
            }
            else
            {
                thread3 t3 = new thread3();
                t3.method2(num);
                t3.start();
            }
            try
            {
                Thread.sleep(1000);
            } catch (InterruptedException e) {
                System.out.println(e);
            }
        }
    }
}
class thread2 extends thread1
{
    int numeven;
    public void method1(int num)
    {
        this.numeven = num;
        System.out.println("Square of " + numeven + ": " + (numeven * numeven));
    }
}

class thread3 extends thread1
{
    int numodd;
    public void method2(int num )
    {
        this.numodd = num;
        System.out.println("Cube of " + numodd + ": " + (numodd * numodd * numodd));
    }
}
